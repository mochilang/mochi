/*
  Project Euler Problem 1: Sum of multiples of 3 or 5 below a given limit.

  Instead of checking every number, this solution generates only numbers that
  are multiples of 3 or 5 by repeating a pattern of increments: +3, +2, +1,
  +3, +1, +2, +3. Starting from 0, each increment yields the next multiple of
  3 or 5, allowing us to accumulate the sum with fewer steps than iterating
  through every integer. The process stops once the next number would reach or
  exceed the limit.
*/

fun solution(n: int): int {
  var total: int = 0
  var num: int = 0
  while true {
    num = num + 3
    if num >= n { break }
    total = total + num
    num = num + 2
    if num >= n { break }
    total = total + num
    num = num + 1
    if num >= n { break }
    total = total + num
    num = num + 3
    if num >= n { break }
    total = total + num
    num = num + 1
    if num >= n { break }
    total = total + num
    num = num + 2
    if num >= n { break }
    total = total + num
    num = num + 3
    if num >= n { break }
    total = total + num
  }
  return total
}

print(str(solution(1000)))
