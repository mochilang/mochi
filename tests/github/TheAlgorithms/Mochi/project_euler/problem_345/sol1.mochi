/*
Project Euler Problem 345: Matrix Sum
------------------------------------
Given a square matrix, the Matrix Sum is the maximum total of selected
elements such that no two elements share the same row or column. This is
the assignment problem for maximizing weight.  Instead of brute-force
permutations, this solution performs dynamic programming over subsets of
columns represented as bit masks.

Algorithm:
1. Parse the matrix from a list of space-separated strings into a list
   of rows of integers.
2. Precompute powers of two to encode column subsets numerically.
3. Iterate over all masks from 0 to 2^n - 1. The number of set bits in a
   mask determines the current row. For each unused column, update the
   best sum for the new mask.
4. The value for the mask with all bits set is the maximum Matrix Sum.

This implementation uses only Mochi built-ins, avoids the `any` type and
FFI, and runs on runtime/vm.
*/

fun parse_row(row_str: string): list<int> {
  var nums: list<int> = []
  var current = 0
  var has_digit = false
  var i = 0
  while i < len(row_str) {
    let ch = substring(row_str, i, i + 1)
    if ch == " " {
      if has_digit {
        nums = append(nums, current)
        current = 0
        has_digit = false
      }
    } else {
      current = current * 10 + (ch as int)
      has_digit = true
    }
    i = i + 1
  }
  if has_digit {
    nums = append(nums, current)
  }
  return nums
}

fun parse_matrix(matrix_str: list<string>): list<list<int>> {
  var matrix: list<list<int>> = []
  for row_str in matrix_str {
    let row = parse_row(row_str)
    matrix = append(matrix, row)
  }
  return matrix
}

fun bitcount(x: int): int {
  var count = 0
  var y = x
  while y > 0 {
    if y % 2 == 1 { count = count + 1 }
    y = y / 2
  }
  return count
}

fun build_powers(n: int): list<int> {
  var powers: list<int> = []
  var i = 0
  var current = 1
  while i <= n {
    powers = append(powers, current)
    current = current * 2
    i = i + 1
  }
  return powers
}

fun solution(matrix_str: list<string>): int {
  let arr = parse_matrix(matrix_str)
  let n = len(arr)
  let powers = build_powers(n)
  let size = powers[n]
  var dp: list<int> = []
  var i = 0
  while i < size {
    dp = append(dp, 0)
    i = i + 1
  }
  var mask = 0
  while mask < size {
    let row = bitcount(mask)
    if row < n {
      var col = 0
      while col < n {
        if (mask / powers[col]) % 2 == 0 {
          let new_mask = mask + powers[col]
          let value = dp[mask] + arr[row][col]
          if value > dp[new_mask] {
            dp[new_mask] = value
          }
        }
        col = col + 1
      }
    }
    mask = mask + 1
  }
  return dp[size - 1]
}

