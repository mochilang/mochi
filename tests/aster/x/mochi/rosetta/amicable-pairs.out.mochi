fun pfacSum(i: int): int {
  var sum: int = 0
  var p: int = 1
  while (p <= (i / 2)) {
    if ((i % p) == 0) {
      sum = (sum + p)
    }
    p = (p + 1)
  }
  return sum
}
fun pad(n: int, width: int): string {
  var s: string = str(n)
  while (len(s) < width) {
    s = (" " + s)
  }
  return s
}
