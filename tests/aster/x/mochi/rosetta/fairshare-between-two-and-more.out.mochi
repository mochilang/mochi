  var bases1: list<int> = [2, 3, 5, 11]
  var i: int = 0
  while (i < len(bases1)) {
    let b: int = bases1[i]
    print(((str(b).padStart(2, " ") + " : ") + str(fairshareList(25, b))))
    i = (i + 1)
  }
  print("")
  print("How many times does each get a turn in 50000 iterations?")
  var bases2: list<int> = [191, 1377, 49999, 50000, 50001]
  i = 0
  while (i < len(bases2)) {
    let b: int = bases2[i]
    let t: string = turns(50000, b)
    print(((("  With " + str(b)) + " people: ") + t))
    i = (i + 1)
  }
}
