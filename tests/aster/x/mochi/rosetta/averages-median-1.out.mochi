fun sortFloat(xs: list<float>): list<float> {
  var arr: list<float> = xs
  var n: int = len(arr)
  var i: int = 0
  while (i < n) {
    var j: int = 0
    while (j < (n - 1)) {
      if (arr[j] > arr[(j + 1)]) {
        let tmp: float = arr[j]
        arr[j] = arr[(j + 1)]
        arr[(j + 1)] = tmp
      }
      j = (j + 1)
    }
    i = (i + 1)
  }
  return arr
}
fun median(a: list<float>): float {
  var arr: list<float> = sortFloat(a)
  let half: int = ((len(arr) / 2)) as int
  var m: float = arr[half]
  if ((len(arr) % 2) == 0) {
    m = (((m + arr[(half - 1)])) / 2)
  }
  return m
}
