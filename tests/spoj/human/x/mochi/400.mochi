// Solution for SPOJ TOANDFRO - To and Fro
// https://www.spoj.com/problems/TOANDFRO/

fun reverseStr(s: string): string {
  var res = ""
  var i = len(s) - 1
  while i >= 0 {
    res = res + s[i:i+1]
    i = i - 1
  }
  return res
}

fun main() {
  while true {
    let line = input()
    if line == nil || line == "" { return }
    let n = line as int
    if n == 0 { break }
    let enc = input()
    let rows = len(enc) / n
    var arr: list<string> = []
    var i = 0
    while i < rows {
      let start = i * n
      let seg = enc[start:start+n]
      if i % 2 == 1 { seg = reverseStr(seg) }
      arr = append(arr, seg)
      i = i + 1
    }
    var col = 0
    var res = ""
    while col < n {
      var r = 0
      while r < rows {
        res = res + (arr[r] as string)[col:col+1]
        r = r + 1
      }
      col = col + 1
    }
    print(res)
  }
}

main()
