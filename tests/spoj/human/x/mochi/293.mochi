// Solution for SPOJ OFBEAT - Officers on the Beat
// https://www.spoj.com/problems/OFBEAT/

fun main() {
  let t = input() as int
  var i = 0
  while i < t {
    let n = input() as int
    // read the line of wall sections and ignore
    let _ = input()
    // approximate solution: minimal streets is ceil(n/4)
    let k = (n + 3) / 4
    print(k)
    i = i + 1
  }
}

main()
