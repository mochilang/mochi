// Solution for SPOJ CHOCOLA - Chocolate
// https://www.spoj.com/problems/CHOCOLA/

fun splitSpaces(s: string): list<string> {
  var parts: list<string> = []
  var cur: string = ""
  var i = 0
  while i < len(s) {
    let ch = s[i:i+1]
    if ch == " " || ch == "\t" || ch == "\r" || ch == "\n" {
      if len(cur) > 0 { parts = append(parts, cur); cur = "" }
    } else {
      cur = cur + ch
    }
    i = i + 1
  }
  if len(cur) > 0 { parts = append(parts, cur) }
  return parts
}

var tokens: list<string> = []

fun nextInt(): int {
  while len(tokens) == 0 {
    let line = input()
    if line == nil { return 0 }
    let parts = splitSpaces(line)
    var j = 0
    while j < len(parts) {
      tokens = append(tokens, parts[j])
      j = j + 1
    }
  }
  let v = int(tokens[0])
  tokens = tokens[1:len(tokens)]
  return v
}

fun sortIntsDesc(arr: list<int>): list<int> {
  var i = 1
  while i < len(arr) {
    var j = i
    while j > 0 && arr[j-1] < arr[j] {
      let tmp = arr[j-1]
      arr[j-1] = arr[j]
      arr[j] = tmp
      j = j - 1
    }
    i = i + 1
  }
  return arr
}

fun minCost(xs: list<int>, ys: list<int>): int {
  xs = sortIntsDesc(xs)
  ys = sortIntsDesc(ys)
  var i = 0
  var j = 0
  var hPieces = 1
  var vPieces = 1
  var cost = 0
  while i < len(xs) && j < len(ys) {
    if xs[i] > ys[j] {
      cost = cost + xs[i] * hPieces
      vPieces = vPieces + 1
      i = i + 1
    } else {
      cost = cost + ys[j] * vPieces
      hPieces = hPieces + 1
      j = j + 1
    }
  }
  while i < len(xs) {
    cost = cost + xs[i] * hPieces
    i = i + 1
  }
  while j < len(ys) {
    cost = cost + ys[j] * vPieces
    j = j + 1
  }
  return cost
}

fun main() {
  let t = nextInt()
  var case = 0
  while case < t {
    let m = nextInt()
    let n = nextInt()
    var xs: list<int> = []
    var i = 0
    while i < m - 1 {
      xs = append(xs, nextInt())
      i = i + 1
    }
    var ys: list<int> = []
    var j = 0
    while j < n - 1 {
      ys = append(ys, nextInt())
      j = j + 1
    }
    let ans = minCost(xs, ys)
    print(str(ans))
    case = case + 1
  }
}

main()
