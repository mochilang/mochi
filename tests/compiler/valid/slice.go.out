package main

import (
	"fmt"
)

func main() {
	var xs []int = []int{1, 2, 3, 4}
	fmt.Println(len(xs[1:3]))
	var text string = "hello"
	fmt.Println(_sliceString(text, 1, 4))
}

func _sliceString(s string, start, end int) string {
    runes := []rune(s)
    l := len(runes)
    if start < 0 {
        start += l
    }
    if end < 0 {
        end += l
    }
    if start < 0 || end > l || start > end {
        panic("slice out of range")
    }
    return string(runes[start:end])
}

