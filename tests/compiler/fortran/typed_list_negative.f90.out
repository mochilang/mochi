program main
  implicit none
  integer, allocatable :: xs(:)
  allocate(xs(0))
  xs = (/((-1)), 0, 1/)
  call test_values()
contains
  subroutine test_values()
    implicit none
    if (.not. (all(xs == (/((-1)), 0, 1/)))) then
      print *, 'expect failed'
      stop 1
    end if
    print *, 'done'
  end subroutine test_values
  
end program main
