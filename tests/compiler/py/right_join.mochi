// right_join.mochi
// Right join: keep all customers, include orders if any

type Customer {
  id: int
  name: string
}

type Order {
  id: int
  customerId: int
  total: int
}

type Entry {
  customerName: string
  order: Order
}

let customers = [
  Customer { id: 1, name: "Alice" },
  Customer { id: 2, name: "Bob" },
  Customer { id: 3, name: "Charlie" },
  Customer { id: 4, name: "Diana" } // No matching order
]

let orders = [
  Order { id: 100, customerId: 1, total: 250 },
  Order { id: 101, customerId: 2, total: 125 },
  Order { id: 102, customerId: 1, total: 300 }
]

let result = from c in customers
             right join o in orders on o.customerId == c.id
             select Entry {
               customerName: c.name,
               order: o
             }

print("--- Right Join using syntax ---")
for entry in result {
  if entry.order {
    print("Customer", entry.customerName, "has order", entry.order.id, "- $", entry.order.total)
  } else {
    print("Customer", entry.customerName, "has no orders")
  }
}
