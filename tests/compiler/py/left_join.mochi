type Customer {
  id: int
  name: string
}

type Order {
  id: int
  customerId: int
  total: int
}

type Entry {
  orderId: int
  customer: Customer
  total: int
}

let customers = [
  Customer { id: 1, name: "Alice" },
  Customer { id: 2, name: "Bob" }
]
let orders = [
  Order { id: 100, customerId: 1, total: 250 },
  Order { id: 101, customerId: 3, total: 80 }
]
let result = from o in orders
             left join c in customers on o.customerId == c.id
             select Entry {
               orderId: o.id,
               customer: c,
               total: o.total
             }
print("--- Left Join ---")
for entry in result {
  print("Order", entry.orderId, "customer", entry.customer, "total", entry.total)
}
