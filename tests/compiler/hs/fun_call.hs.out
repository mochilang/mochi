module Main where

import Data.Maybe (fromMaybe)


forLoop :: Int -> Int -> (Int -> Maybe a) -> Maybe a
forLoop start end f = go start
  where
    go i | i < end =
            case f i of
              Just v -> Just v
              Nothing -> go (i + 1)
         | otherwise = Nothing

avg :: Real a => [a] -> Double
avg xs | null xs = 0
       | otherwise = sum (map realToFrac xs) / fromIntegral (length xs)


add a b = fromMaybe ((a + b)) $
    Nothing

main :: IO ()
main = do
    print (add 2 3)
