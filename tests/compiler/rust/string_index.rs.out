fn main() {
    let mut text = "hello".to_string();
    println!("{}", _index_string(&text, 1));
}

fn _index_string(s: &str, i: i32) -> String {
    let mut idx = i;
    let chars: Vec<char> = s.chars().collect();
    if idx < 0 { idx += chars.len() as i32; }
    if idx < 0 || idx >= chars.len() as i32 { panic!("index out of range"); }
    chars[idx as usize].to_string()
}
