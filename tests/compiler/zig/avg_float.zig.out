const std = @import("std");

fn _avg_float(v: []const f64) f64 {
        if (v.len == 0) return 0;
        var sum: f64 = 0;
        for (v) |it| { sum += it; }
        return sum / @as(f64, @floatFromInt(v.len));
}

pub fn main() void {
        std.debug.print("{any}\n", .{_avg_float(&[_]f64{1, 2, 3})});
}
