open System

type Tree =
    | Leaf
    | Node of left: Tree * value: int * right: Tree

exception Return_isLeaf of bool
let isLeaf (t: Tree) : bool =
    try
        raise (Return_isLeaf ((match t with
 | Leaf -> true
 | _ -> false
)))
        failwith "unreachable"
    with Return_isLeaf v -> v

printfn "%A" isLeaf Leaf
printfn "%A" isLeaf Node(Leaf, 1, Leaf)
