        {"items": movie_keyword, "on": lambda n, ci, t, mk: mk["movie_id"] == t["id"]},
        {"items": keyword, "on": lambda n, ci, t, mk, k: k["id"] == mk["keyword_id"]},
        {
            "items": movie_companies,
