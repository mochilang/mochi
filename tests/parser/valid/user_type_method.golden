(program
  (type Circle
    (field radius (type float))
    (fun area
      (type float)
      (let a
        (binary *
          (binary * (float 3.14) (selector radius))
          (selector radius)
        )
      )
      (call print (string "Calculating area:") (selector a))
      (return (selector a))
    )
    (fun describe
      (call print (string "Circle with radius") (selector radius))
      (call area)
    )
  )
)
