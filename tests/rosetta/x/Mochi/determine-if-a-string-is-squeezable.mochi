fun padLeft(n: int, width: int): string {
  var s = str(n)
  while len(s) < width {
    s = " " + s
  }
  return s
}

fun squeeze(s: string, ch: string): string {
  var out = ""
  var prev = false
  var i = 0
  while i < len(s) {
    let c = substring(s, i, i+1)
    if c == ch {
      if !prev {
        out = out + c
        prev = true
      }
    } else {
      out = out + c
      prev = false
    }
    i = i + 1
  }
  return out
}

