(define (list-set lst idx val)
    (let loop ((i idx) (l lst))
        (if (null? l)
            '()
            (if (= i 0)
                (cons val (cdr l))
                (cons (car l) (loop (- i 1) (cdr l))))))
)

(define matrix (list (list 1 2) (list 3 4)))
(set! matrix (list-set matrix 1 (list-set (list-ref matrix 1) 0 5)))
