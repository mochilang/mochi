(define numbers (list 1 2 3 4 5 6 7 8 9))
(call/cc (lambda (brk0)
  (let loop0 ((n_idx 0))
    (when (< n_idx (length numbers))
      (let ((n (list-ref numbers n_idx)))
        (when (equal? (modulo n 2) 0)
          (loop0 (+ n_idx 1))
        )
        (when (> n 7)
          (brk0 '())
        )
        (begin (display "odd number:") (display " ") (display n) (newline))
      )
      (loop0 (+ n_idx 1)))
    )
  )
)
