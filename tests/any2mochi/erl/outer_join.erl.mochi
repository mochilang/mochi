fun mochi_right_join_item(B, A, Fun) {
  Matches =
  [
  {I, B} ||
  I <- A,
  Fun(I, B)
  ]
  case Matches of
  [] ->
  [{undefined, B}];
  _ ->
  Matches
  end
}
