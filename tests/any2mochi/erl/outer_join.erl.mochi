fun mochi_left_join_item(A, B, Fun) {
  Matches =
  [
  {A, J} ||
  J <- B,
  Fun(A, J)
  ]
  case Matches of
  [] ->
  [{A, undefined}];
  _ ->
  Matches
  end
}
