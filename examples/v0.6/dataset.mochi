// dataset.mochi
// Define an in-memory dataset using a list of records.

let people = [
  { name: "Alice", age: 30 },
  { name: "Bob", age: 15 },
  { name: "Charlie", age: 65 },
  { name: "Diana", age: 45 }
]

let adults = from person in people
             where person.age >= 18
             select {
               name: person.name,
               age: person.age,
               is_senior: person.age >= 60
             }

for person in adults {
  print(person.name, "is", person.age, "years old.",
        if person.is_senior { " (senior)" } else { "" })
}
