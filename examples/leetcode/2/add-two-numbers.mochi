fun addTwoNumbers(l1: list<int>, l2: list<int>): list<int> {
  var i = 0
  var j = 0
  var carry = 0
  var result = []
  while i < len(l1) || j < len(l2) || carry > 0 {
    var x = 0
    if i < len(l1) {
      x = l1[i]
      i = i + 1
    }
    var y = 0
    if j < len(l2) {
      y = l2[j]
      j = j + 1
    }
    let sum = x + y + carry
    let digit = sum % 10
    carry = sum / 10
    result = result + [digit]
  }
  return result
}

test "example 1" {
  expect addTwoNumbers([2,4,3], [5,6,4]) == [7,0,8]
}

test "example 2" {
  expect addTwoNumbers([0], [0]) == [0]
}

test "example 3" {
  expect addTwoNumbers([9,9,9,9,9,9,9], [9,9,9,9]) == [8,9,9,9,0,0,0,1]
}
